extends layout 

block main-content 

  h1.page-title 
  .form-container
    h2#inroduction Explore Exercises
    form(name='form' method='get' action="/targetmuscles")
      p Select an option of your target muscle you want to do the exercise for!
        #selection-option
          div
            label(for='targetmuscles')
            select#targetmuscles(name='targetmuscles')
              option(value='' selected='' disabled='') --Select Target Muscle--
                each m in targetMuscles
                  option(value=m selected = (m==selectedTargetMuscles)) #{m} 
            #btn
              button#btn(type='submit' value='submit') Submit
    #result
    - if (selectedTargetMuscles)
      each m in musclesExercises
        - url = `${m.gifUrl}`;
        img(src= url) 
        <br> Bodypart:#{m.bodyPart} <br> Equipment:#{m.equipment} <br> Name:#{m.name} <br> Target:#{m.target} <hr>